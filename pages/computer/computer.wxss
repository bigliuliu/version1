.table {  
  margin: 1px;
  width: 100%;  
  margin-top:5rpx;  
  margin-right:5rpx;  
  margin-left: 5rpx;  
  background: gray;    
}  
.tr {  
  display: flex;  
  width: 100%;  
  justify-content: center;  
  height:460rpx;  
  margin: 1px;
}  
.td {  
    width:20%;  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    margin: 1px; 
    height: 100%;  
}  
.td-1 {  
    justify-content: center;  
    display: flex;  
    text-align: center;  
    border-right: 2px solid;  
    height: 100%;  
}  
.td-2 {  
    width:80%;  
    justify-content: center;  
    border-right: 2px solid;  
    text-align: left;  
    height: 100%;  
    max-width: 100%;  
    padding: 40rpx 0;
    
}  
.bg-w{  
  background: gray;  
}    
.th {  
  width:520rpx;  
  justify-content: left;   
  display: flex;  
  border-right: 2px solid; 
} 
.th-text {  
  width: 80%;  
  justify-content: center;  
  color: #000;  
  display: block;  
  height: 3rem;  
  align-items: center;  
  max-height:  3rem;  
  max-width: 80%;
  }